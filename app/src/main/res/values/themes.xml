<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/atomic_age</item>
    </style>

    <style name="MyCustomThemeBlue" parent="DefaultTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/steel_blue</item>
        <item name="colorPrimaryVariant">@color/light_sky_blue</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cadet_blue</item>
        <item name="colorSecondaryVariant">@color/dark_olive_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/light_cyan</item>
        <item name="colorOnSurface">@color/steel_blue</item>
    </style>

    <style name="MyCustomThemeRed" parent="DefaultTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_violet_red</item>
        <item name="colorPrimaryVariant">@color/orchid</item>
        <item name="colorOnPrimary">@color/dark_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_salmon</item>
        <item name="colorSecondaryVariant">@color/burly_wood</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/hot_pink</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.COLLAPSING_TOOLBAR_LAYOUT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/atomic_age</item>
    </style>

    <style name="Theme.COLLAPSING_TOOLBAR_LAYOUT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/atomic_age</item>
    </style>

    <style name="Theme.COLLAPSING_TOOLBAR_LAYOUT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.COLLAPSING_TOOLBAR_LAYOUT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>